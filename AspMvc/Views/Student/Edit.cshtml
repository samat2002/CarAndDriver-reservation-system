@model Student;
@{
     ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<form method="POST" asp-controller="Student" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-controls" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <input type="number" asp-for="Score" class="form-controls" />
        <span asp-validation-for="Score" class="text-danger"></span>

    </div>
    <button type="submit" class="btn-primary my-2">Update</button>
</form>    
