@model IEnumerable<AspMvc.Models.Student>;
@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Your Score</h1>

@if (Model.Count() > 0) { 
<table class="table table-dark">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Score</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Score</td>
                <td>
                    <a class="btn btn-warning"
                       asp-controller="Student"
                       asp-action="Edit"
                       asp-route-id="@student.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="Student"
                       asp-action="Delete"
                       asp-route-id="@student.Id"
                       onclick="return confirm('wanna delete @student.Name ?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
            else
            {
                <div class="alert alert-secondary">NO Data</div>
            }



